<%- include ('partials/header.ejs'); %>

<div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>id_productora</td>
              <td>Nombre</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= data[i].id_productora %></td>
                  <td><%= data[i].Nombre %></td>
                  <td>
                    <a href="/productora/update/<%= data[i].id_productora %>" class="btn btn-info">Edit</a>
                    <a href="/productora/delete/<%= data[i].id_productora %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="col-md-5">
        <div class="card-body">
  
          <form action="/productora/add" method="post">
            <div class="form-group">
                <input type="number" name="id_productora" placeholder="id" class="form-control" autofocus>
            <div class="form-group">
              <input type="text" name="Nombre" placeholder="Nombre" class="form-control" autofocus>
            </div>
  
            <button type="submit" class="btn btn-primary">
              Add estudio
            </button>
          </form>
        </div>
      </div>
      
      <div class="card-body">
        <form action="/" method="GET">
          <button type="submit" class="btn btn-danger">
            Return
          </button>
        </form>
      </div>
    </div>
  </div>

  

<%- include ('partials/footer.ejs'); %>